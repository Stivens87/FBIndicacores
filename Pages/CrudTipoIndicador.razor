    bool resultado = await servicioEntidad.ActualizarAsync(
        "proyecto", 
        "tipoIndicador", 
        "id", 
        idTipoIndicadorEditar.ToString(), 
        datosTipoIndicadorActualizado);

    if (resultado)
    {
